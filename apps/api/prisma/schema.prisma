generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id                    String   @id @default(uuid())
  name                  String
  description           String
  status                String   @default("PENDING") 
  // Statuses: PENDING, INTERVIEWING, AWAITING_ANSWER, ANALYZING, 
  //           AWAITING_REQUIREMENTS_APPROVAL, GENERATING_CODE, 
  //           AWAITING_CODE_APPROVAL, COMPLETED, REJECTED
  
  conversationHistory   Json?    // Array of {role: 'agent'|'user', message: string}
  interviewComplete     Boolean  @default(false)
  refinedDescription    String?  // Final description after interview
  
  pendingRequirements   Json?    // Temporary storage for unapproved requirements
  requirements          Json?    // Approved requirements (moved from pendingRequirements)
  pendingCode           Json?    // Temporary storage for unapproved code
  generatedCode         Json?    // Approved code (moved from pendingCode)
  
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}
